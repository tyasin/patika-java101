import java.util.Scanner;
public class hipotenus {
    public static void main(String[] args) {
        double kenar1, kenar2, kenar3, u, alan;
        Scanner input = new Scanner(System.in);
        System.out.println("Birinci kenar uzunluğu girin");
        kenar1 = input.nextDouble();
        System.out.println("İkinci kenar uzunluğu girin");
        kenar2 = input.nextDouble();
        System.out.println("Üçüncü kenar uzunluğu girin");
        kenar3 = input.nextDouble();
        u = (kenar1+kenar2+kenar3)/2;
        alan = u*(u-kenar1)*(u-kenar2)*(u-kenar3);
        System.out.print("Üçgenin Alanı: ");
        System.out.print(Math.sqrt(alan));

    }
}
